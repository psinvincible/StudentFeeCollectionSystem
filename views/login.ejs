<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <title>SFCS - Login</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <div class="shrink-0">
      <%- include("./partials/navbar") %>
    </div>
    <div class="flex-grow">
      <form action="/user/login" method="post" class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-lg shadow-cyan-300">
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1"
            >Email</label
          >
          <input
            type="email"
            class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
            id="email"
            name="email"
            placeholder="Enter your email"
            required
          />
        </div>
        <div class="mb-6">
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <input
            type="password"
            class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500"
            id="password"
            name="password"
            placeholder="Enter your password"
            required
          />
        </div>
        <button type="submit" class="w-full rounded-md bg-blue-600 py-2 text-sm font-semibold text-white hover:bg-blue-700 transition">Login</button>
      </form>
    </div>
    <div class="shrink-0">
      <%- include("./partials/footer") %>
      </div>
  </body>
</html>
